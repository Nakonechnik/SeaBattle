<Window x:Class="SeaBattle.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SeaBattle.Client"
        Title="Морской бой" 
        Height="800" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#007ACC" Padding="15">
            <DockPanel>
                <TextBlock Text="Морской бой" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="White"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <TextBlock x:Name="StatusText" 
                              Text="Не подключено"
                              Foreground="White"
                              Margin="0,0,10,0"/>

                    <TextBlock x:Name="PlayerNameText"
                              Text="Гость"
                              Foreground="White"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Подключение к серверу"
                          Foreground="White"
                          FontSize="28"
                          FontWeight="Bold"
                          Margin="0,0,0,30"
                          HorizontalAlignment="Center"/>

                <TextBlock Text="Ваше имя:" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="PlayerNameTextBox" 
                        Text="Игрок" 
                        Width="200" 
                        Margin="0,0,0,15"
                        Background="#2D2D30"
                        Foreground="White"/>

                <TextBlock Text="Адрес сервера:" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="ServerAddressTextBox" 
                        Text="127.0.0.1" 
                        Width="200" 
                        Margin="0,0,0,15"
                        Background="#2D2D30"
                        Foreground="White"/>

                <TextBlock Text="Порт:" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="PortTextBox" 
                        Text="8888" 
                        Width="100" 
                        Margin="0,0,0,30"
                        Background="#2D2D30"
                        Foreground="White"/>

                <Button x:Name="ConnectButton"
                       Content="Подключиться"
                       Click="ConnectButton_Click"
                       Width="150"
                       Height="40"
                       Margin="0,0,0,10"/>

                <Button x:Name="ExitButton"
                       Content="Выход"
                       Click="ExitButton_Click"
                       Width="100"
                       Height="40"/>
            </StackPanel>
        </Grid>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2" Background="#252526">
            <StatusBarItem>
                <TextBlock x:Name="ConnectionStatus" 
                          Text="Отключено" 
                          Foreground="LightCoral"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
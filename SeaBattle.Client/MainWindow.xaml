<Window x:Class="SeaBattle.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Морской бой" 
        Height="700" 
        Width="850"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#007ACC" Padding="15">
            <DockPanel>
                <TextBlock Text="Морской бой" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="White"/>

                <TextBlock x:Name="StatusText"
                          Text="Не подключено"
                          Foreground="White"
                          DockPanel.Dock="Right"
                          VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Background="#1E1E1E">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Клиент для сервера Морской бой"
                      Foreground="White"
                      FontSize="20"
                      Grid.Row="0"
                      Margin="0,20,0,20"
                      HorizontalAlignment="Center"/>

            <!-- Поля ввода -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Имя:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="PlayerNameTextBox" 
                        Text="Игрок" 
                        Width="150" 
                        Margin="0,0,20,0"/>

                <TextBlock Text="Адрес:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="ServerAddressTextBox" 
                        Text="127.0.0.1" 
                        Width="150" 
                        Margin="0,0,20,0"/>

                <TextBlock Text="Порт:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="PortTextBox" 
                        Text="8888" 
                        Width="80" />
            </StackPanel>

            <!-- Кнопки подключения -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button x:Name="ConnectButton"
                       Content="Подключиться"
                       Click="ConnectButton_Click"
                       Width="120"
                       Height="35"/>

                <Button x:Name="DisconnectButton"
                       Content="Отключиться"
                       Click="DisconnectButton_Click"
                       Width="120"
                       Height="35"
                       Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Отправка сообщений -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBox x:Name="MessageTextBox"
                        Text="Привет сервер!"
                        Width="400"
                        IsEnabled="{Binding ElementName=SendButton, Path=IsEnabled}"
                        KeyDown="MessageTextBox_KeyDown"/>

                <Button x:Name="SendButton"
                       Content="Отправить"
                       Click="SendButton_Click"
                       Width="100"
                       Height="35"
                       Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Лог сообщений -->
            <Border Grid.Row="4" 
                   BorderBrush="#555555" 
                   BorderThickness="1" 
                   Margin="20,0,20,10" 
                   CornerRadius="5">
                <ScrollViewer>
                    <TextBlock x:Name="MessageTextBlock"
                              Foreground="White"
                              TextWrapping="Wrap"
                              Padding="10"
                              FontFamily="Consolas"/>
                </ScrollViewer>
            </Border>

            <!-- Информация -->
            <TextBlock Grid.Row="5"
                      Text="Используйте JSON протокол для обмена сообщениями"
                      Foreground="#888888"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"
                      FontSize="12"/>
        </Grid>
    </Grid>
</Window>
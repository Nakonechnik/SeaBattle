<Window x:Class="SeaBattle.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Морской бой - Клиент" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF007ACC" Padding="15">
            <TextBlock Text="Морской бой - Клиент" 
                      FontSize="24" 
                      FontWeight="Bold"
                      Foreground="White"/>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Подключение -->
            <GroupBox Grid.Row="0" Header="Подключение" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Сервер:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox x:Name="ServerTextBox" Text="127.0.0.1" Width="100" Margin="5"/>

                    <TextBlock Text="Порт:" VerticalAlignment="Center" Margin="5,5,5,5"/>
                    <TextBox x:Name="PortTextBox" Text="8888" Width="60" Margin="5"/>

                    <Button x:Name="ConnectButton" Content="Подключиться" 
                            Click="ConnectButton_Click" Width="120" Margin="10,0,0,0"/>

                    <Button x:Name="DisconnectButton" Content="Отключиться" 
                            Click="DisconnectButton_Click" Width="100" Margin="5,0,0,0"
                            IsEnabled="False"/>
                </StackPanel>
            </GroupBox>

            <!-- Сообщения -->
            <GroupBox Grid.Row="1" Header="Сообщения" Margin="0,0,0,10">
                <StackPanel>
                    <TextBox x:Name="MessageTextBox" 
                            Text="Привет сервер!" 
                            Margin="5"/>

                    <Button x:Name="SendButton" 
                            Content="Отправить сообщение" 
                            Click="SendButton_Click" 
                            Width="150" 
                            Margin="5"
                            IsEnabled="False"/>
                </StackPanel>
            </GroupBox>

            <!-- Статус -->
            <GroupBox Grid.Row="2" Header="Статус" Margin="0,0,0,10">
                <TextBlock x:Name="StatusText" 
                          Text="Не подключено" 
                          Foreground="Red"
                          Margin="5"/>
            </GroupBox>

            <!-- Лог -->
            <GroupBox Grid.Row="3" Header="Лог сообщений">
                <TextBox x:Name="LogTextBox" 
                        IsReadOnly="True" 
                        VerticalScrollBarVisibility="Auto"
                        Height="200"
                        Margin="5"/>
            </GroupBox>

            <!-- Информация -->
            <TextBlock Grid.Row="4" 
                      Text="Для тестирования: запустите сервер, затем подключитесь с клиента"
                      Foreground="Gray"
                      Margin="5"/>
        </Grid>

        <!-- Нижняя панель -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="Готов"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
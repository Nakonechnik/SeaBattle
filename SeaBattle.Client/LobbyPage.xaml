<Page x:Class="SeaBattle.Client.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:SeaBattle.Client"
      Title="Игровое лобби"
      Background="#1E1E1E"
      Width="900" Height="600">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#2D2D30" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,20">
            <DockPanel>
                <TextBlock Text="Игровое лобби" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <TextBlock Text="Игрок:" 
                              Foreground="White" 
                              Margin="0,0,5,0"/>
                    <TextBlock x:Name="PlayerNameText" 
                              Foreground="#007ACC" 
                              FontWeight="Bold"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - управление -->
            <Border Grid.Column="0" 
                    Background="#2D2D30" 
                    CornerRadius="5" 
                    Padding="15"
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Управление"
                              Foreground="White"
                              FontSize="18"
                              FontWeight="Bold"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="Название комнаты:"
                              Foreground="White"
                              Margin="0,0,0,5"/>

                    <TextBox x:Name="RoomNameTextBox"
                            Text="Моя комната"
                            Margin="0,0,0,15"/>

                    <Button x:Name="CreateRoomButton"
                           Content="Создать комнату"
                           Click="CreateRoomButton_Click"
                           Height="35"
                           Margin="0,0,0,10"/>

                    <Button x:Name="RefreshRoomsButton"
                           Content="Обновить список"
                           Click="RefreshRoomsButton_Click"
                           Height="35"
                           Margin="0,0,0,10"/>

                    <Button x:Name="LeaveRoomButton"
                           Content="Покинуть комнату"
                           Click="LeaveRoomButton_Click"
                           Height="35"
                           Margin="0,0,0,10"
                           IsEnabled="False"/>

                    <Button x:Name="StartGameButton"
                           Content="Начать игру"
                           Click="StartGameButton_Click"
                           Height="35"
                           Margin="0,0,0,20"
                           IsEnabled="False"
                           Background="#27AE60"/>

                    <Button x:Name="BackButton"
                           Content="Назад"
                           Click="BackButton_Click"
                           Height="35"
                           Margin="0,0,0,10"/>

                    <Border Background="#3D3D40" 
                           CornerRadius="3" 
                           Padding="10">
                        <TextBlock x:Name="RoomStatusText"
                                  Text="Не в комнате"
                                  Foreground="LightBlue"
                                  TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Правая панель - список комнат -->
            <Border Grid.Column="1" 
                    Background="#2D2D30" 
                    CornerRadius="5" 
                    Padding="15">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                              Text="Доступные комнаты"
                              Foreground="White"
                              FontSize="16"
                              FontWeight="Bold"
                              Margin="0,0,0,15"/>

                    <ListBox x:Name="RoomsListBox"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            SelectionChanged="RoomsListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#3D3D40" 
                                        CornerRadius="3" 
                                        Margin="0,0,0,5" 
                                        Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" 
                                                  FontWeight="Bold"
                                                  FontSize="14"
                                                  Foreground="White"/>
                                        <TextBlock Text="{Binding CreatorName}"
                                                  FontSize="12"
                                                  Foreground="#AAAAAA"/>
                                        <TextBlock Text="{Binding PlayerCount, StringFormat='Игроков: {0}/2'}"
                                                  FontSize="12"
                                                  Foreground="#AAAAAA"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2" Background="#252526" Margin="0,20,0,0">
            <StatusBarItem>
                <TextBlock x:Name="ConnectionStatusText" 
                          Text="Подключено" 
                          Foreground="LightGreen"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>
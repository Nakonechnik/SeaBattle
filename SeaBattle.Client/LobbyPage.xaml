<Page x:Class="SeaBattle.Client.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Игровое лобби"
      Width="900" Height="600">

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#007ACC" Padding="15">
            <DockPanel>
                <TextBlock Text="Игровое лобби" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="White"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <TextBlock Text="Игрок:" 
                              Foreground="White" 
                              Margin="0,0,5,0"/>
                    <TextBlock x:Name="PlayerNameText"
                              Text="Гость"
                              Foreground="White"
                              FontWeight="Bold"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - управление -->
            <Border Grid.Column="0" 
                   Margin="0,0,10,0"
                   Background="#252526"
                   CornerRadius="5"
                   BorderBrush="#555555"
                   BorderThickness="1">

                <StackPanel Margin="15">
                    <TextBlock Text="Управление"
                              Foreground="White"
                              FontSize="18"
                              FontWeight="Bold"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="Название комнаты:"
                              Foreground="White"
                              Margin="0,0,0,5"/>

                    <TextBox x:Name="RoomNameTextBox"
                            Text="Моя комната"
                            Margin="0,0,0,10"/>

                    <Button x:Name="CreateRoomButton"
                           Content="Создать комнату"
                           Click="CreateRoomButton_Click"
                           Height="35"
                           Margin="0,0,0,10"/>

                    <Button x:Name="RefreshRoomsButton"
                           Content="Обновить список"
                           Click="RefreshRoomsButton_Click"
                           Height="35"
                           Margin="0,0,0,10"/>

                    <Button x:Name="LeaveRoomButton"
                           Content="Покинуть комнату"
                           Click="LeaveRoomButton_Click"
                           Height="35"
                           Margin="0,0,0,10"
                           IsEnabled="False"/>

                    <Button x:Name="StartGameButton"
                           Content="Начать игру"
                           Click="StartGameButton_Click"
                           Height="35"
                           Margin="0,0,0,10"
                           IsEnabled="False"/>

                    <Button x:Name="BackButton"
                           Content="Назад"
                           Click="BackButton_Click"
                           Height="35"
                           Margin="0,0,0,20"/>

                    <!-- Статус -->
                    <Border Background="#2D2D30" 
                           CornerRadius="3" 
                           Padding="10">
                        <TextBlock x:Name="RoomStatusText"
                                  Text="Не в комнате"
                                  Foreground="LightBlue"
                                  TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Правая панель - список комнат и чат -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <!-- Список комнат -->
                <Border Grid.Row="0"
                       Margin="0,0,0,10"
                       Background="#252526"
                       CornerRadius="5"
                       BorderBrush="#555555"
                       BorderThickness="1">

                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top"
                                  Text="Доступные комнаты"
                                  Foreground="White"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="10,10,10,5"/>

                        <ListBox x:Name="RoomsListBox"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="White"
                                SelectionChanged="RoomsListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" Margin="2" Background="#2D2D30" CornerRadius="3">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" 
                                                      FontWeight="Bold"
                                                      FontSize="14"/>
                                            <TextBlock Text="{Binding CreatorName}"
                                                      FontSize="12"
                                                      Foreground="#AAAAAA"/>
                                            <TextBlock Text="{Binding PlayerCount, StringFormat='Игроков: {0}/2'}"
                                                      FontSize="12"
                                                      Foreground="#AAAAAA"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>

                <!-- Чат -->
                <Border Grid.Row="1"
                       Background="#252526"
                       CornerRadius="5"
                       BorderBrush="#555555"
                       BorderThickness="1">

                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top"
                                  Text="Чат лобби"
                                  Foreground="White"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Margin="10,10,10,5"/>

                        <!-- Сообщения чата -->
                        <ScrollViewer DockPanel.Dock="Top" Height="200">
                            <TextBlock x:Name="ChatTextBlock"
                                      Foreground="White"
                                      TextWrapping="Wrap"
                                      Padding="10"/>
                        </ScrollViewer>

                        <!-- Ввод сообщения -->
                        <DockPanel DockPanel.Dock="Bottom" Margin="10">
                            <TextBox x:Name="ChatTextBox"
                                    DockPanel.Dock="Left"
                                    VerticalAlignment="Center"
                                    KeyDown="ChatTextBox_KeyDown"/>

                            <Button x:Name="SendChatButton"
                                   DockPanel.Dock="Right"
                                   Content="Отправить"
                                   Click="SendChatButton_Click"
                                   Width="100"
                                   Height="30"
                                   Margin="10,0,0,0"/>
                        </DockPanel>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2" Background="#252526">
            <StatusBarItem>
                <TextBlock x:Name="ConnectionStatusText" 
                          Text="Подключено" 
                          Foreground="White"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="SeaBattle v1.0" 
                          Foreground="#888888"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>
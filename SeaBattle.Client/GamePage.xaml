<Page x:Class="SeaBattle.Client.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:SeaBattle.Client"
      Title="Морской бой - Игра"
      Background="#1E1E1E"
      Width="900" Height="700">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#2D2D30" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,20">
            <DockPanel>
                <TextBlock Text="Морской бой" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <TextBlock x:Name="PlayerNameText" 
                              Foreground="#007ACC" 
                              FontWeight="Bold" 
                              Margin="0,0,20,0"/>

                    <TextBlock x:Name="StatusText" 
                              Text="Расстановка кораблей" 
                              Foreground="Yellow"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Игровые поля -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Свое поле -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <TextBlock Text="Ваше поле" 
                          Foreground="White" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Margin="0,0,0,10" 
                          HorizontalAlignment="Center"/>

                <local:GameBoardControl x:Name="MyBoardControl"
                                       Width="300" 
                                       Height="300"
                                       IsEnemyBoard="False"
                                       ShowShips="True"
                                       CellClicked="MyBoardCellClicked"/>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,0">
                    <Button x:Name="RandomPlaceButton" 
                           Content="Случайная" 
                           Click="RandomPlaceButton_Click"
                           Width="100" 
                           Margin="5"/>

                    <Button x:Name="ClearBoardButton" 
                           Content="Очистить" 
                           Click="ClearBoardButton_Click"
                           Width="100" 
                           Margin="5"/>

                    <Button x:Name="ReadyButton" 
                           Content="Готов" 
                           Click="ReadyButton_Click"
                           Width="100" 
                           Margin="5"
                           Background="#27AE60"
                           IsEnabled="False"/>
                </StackPanel>
            </StackPanel>

            <!-- Разделитель -->
            <Border Grid.Column="1" 
                    Width="2" 
                    Background="#555555" 
                    Margin="20,0"/>

            <!-- Поле противника -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <TextBlock x:Name="EnemyTitleText" 
                          Text="Поле противника" 
                          Foreground="White" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Margin="0,0,0,10" 
                          HorizontalAlignment="Center"/>

                <local:GameBoardControl x:Name="EnemyBoardControl"
                                       Width="300" 
                                       Height="300"
                                       IsEnemyBoard="True"
                                       ShowShips="False"
                                       CellClicked="EnemyBoardCellClicked"/>

                <Button x:Name="SurrenderButton" 
                       Content="Сдаться" 
                       Click="SurrenderButton_Click"
                       Width="100" 
                       Height="35"
                       Margin="0,20,0,0"
                       Background="#E74C3C"/>
            </StackPanel>
        </Grid>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" 
                Background="#2D2D30" 
                CornerRadius="5" 
                Padding="15"
                Margin="0,20,0,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" 
                          Text="Ваши корабли: " 
                          Foreground="White"
                          VerticalAlignment="Center"/>

                <TextBlock x:Name="ShipsStatusText" 
                          DockPanel.Dock="Left" 
                          Text="0/10 размещено" 
                          Foreground="Yellow"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"/>

                <Button x:Name="ExitGameButton" 
                       DockPanel.Dock="Right" 
                       Content="Выйти из игры" 
                       Click="ExitGameButton_Click"
                       Width="120" 
                       Height="30"/>
            </DockPanel>
        </Border>
    </Grid>
</Page>
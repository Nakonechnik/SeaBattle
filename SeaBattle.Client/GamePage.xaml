<Page x:Class="SeaBattle.Client.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:SeaBattle.Client"
      Title="Морской бой - Игра"
      Background="#1E1E1E"
      Width="900" Height="700"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded">

    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}"/>
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"/>

        <Style x:Key="GameStatusStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Style="{StaticResource GameStatusStyle}" 
                Margin="0,0,0,20">
            <DockPanel>
                <TextBlock Text="Морской бой" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <TextBlock Text="Игрок: " 
                              Foreground="#AAAAAA" 
                              VerticalAlignment="Center"/>
                    <TextBlock x:Name="PlayerNameText" 
                              Foreground="#007ACC" 
                              FontWeight="Bold" 
                              Margin="0,0,20,0"
                              VerticalAlignment="Center"/>

                    <Border Background="#3D3D40" 
                            CornerRadius="3" 
                            Padding="8,4">
                        <TextBlock x:Name="StatusText" 
                                  Text="Расстановка кораблей" 
                                  Foreground="Yellow"
                                  FontWeight="SemiBold"/>
                    </Border>
                    <Border x:Name="TimerBorder" 
                            Background="#3D3D40" 
                            CornerRadius="3" 
                            Padding="8,4"
                            Margin="10,0,0,0"
                            Visibility="Collapsed">
                        <TextBlock x:Name="TimerText" 
                                  Text="2:00" 
                                  Foreground="#AAAAAA"
                                  FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Игровые поля -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Свое поле -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <Border Background="#2D2D30" 
                        CornerRadius="3" 
                        Padding="10,5" 
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center">
                    <TextBlock Text="ВАШЕ ПОЛЕ" 
                              Foreground="White" 
                              FontSize="14" 
                              FontWeight="Bold"/>
                </Border>

                <local:GameBoardControl x:Name="MyBoardControl"
                                       Width="330" 
                                       Height="330"
                                       IsEnemyBoard="False"
                                       ShowShips="True"
                                       IsEnabled="True"
                                       CellClicked="MyBoardCellClicked"/>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,0">
                    <Button x:Name="RandomPlaceButton" 
                           Content="Случайная" 
                           Click="RandomPlaceButton_Click"
                           Width="100" 
                           Margin="5"/>

                    <Button x:Name="ClearBoardButton" 
                           Content="Очистить" 
                           Click="ClearBoardButton_Click"
                           Width="100" 
                           Margin="5"/>

                    <Button x:Name="OrientationButton" 
                           Content="Горизонтально" 
                           Click="OrientationButton_Click"
                           Width="110" 
                           Margin="5"
                           ToolTip="Ориентация следующего корабля. Нажмите, чтобы переключить."/>

                    <Button x:Name="ReadyButton" 
                           Content="Готов" 
                           Click="ReadyButton_Click"
                           Width="100" 
                           Margin="5"
                           Background="#27AE60"
                           IsEnabled="False"/>
                </StackPanel>
            </StackPanel>

            <!-- Разделитель -->
            <Border Grid.Column="1" 
                    Width="2" 
                    Background="#555555" 
                    Margin="20,0"/>

            <!-- Поле противника -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <Border Background="#2D2D30" 
                        CornerRadius="3" 
                        Padding="10,5" 
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center">
                    <TextBlock x:Name="EnemyTitleText" 
                              Text="ПОЛЕ ПРОТИВНИКА" 
                              Foreground="White" 
                              FontSize="14" 
                              FontWeight="Bold"/>
                </Border>

                <local:GameBoardControl x:Name="EnemyBoardControl"
                                       Width="330" 
                                       Height="330"
                                       IsEnemyBoard="True"
                                       ShowShips="False"
                                       IsEnabled="False"
                                       CellClicked="EnemyBoardCellClicked"/>

                <Border Background="#2D2D30" 
                        CornerRadius="3" 
                        Padding="10" 
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center">
                    <TextBlock x:Name="TurnStatusText" 
                              Text="Ожидание начала игры..." 
                              Foreground="#AAAAAA"
                              FontSize="12"/>
                </Border>

                <Button x:Name="SurrenderButton" 
                       Content="Сдаться" 
                       Click="SurrenderButton_Click"
                       Width="120" 
                       Height="35"
                       Margin="0,10,0,0"
                       Background="#E74C3C"
                       IsEnabled="False"/>
            </StackPanel>
        </Grid>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" 
                Style="{StaticResource GameStatusStyle}"
                Margin="0,20,0,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <TextBlock Text="Ваши корабли: " 
                              Foreground="#AAAAAA"
                              VerticalAlignment="Center"/>
                    <TextBlock x:Name="ShipsStatusText" 
                              Text="0/10 размещено" 
                              Foreground="Yellow"
                              VerticalAlignment="Center"
                              FontWeight="Bold"
                              Margin="0,0,20,0"/>

                    <Border Background="#3D3D40" 
                            CornerRadius="2" 
                            Padding="5,2"
                            VerticalAlignment="Center">
                        <TextBlock x:Name="GamePhaseText" 
                                  Text="Фаза расстановки" 
                                  Foreground="#AAAAAA"
                                  FontSize="11"/>
                    </Border>
                </StackPanel>

                <Button x:Name="ExitGameButton" 
                       DockPanel.Dock="Right" 
                       Content="Выйти из игры" 
                       Click="ExitGameButton_Click"
                       Width="120" 
                       Height="30"
                       Background="#7F8C8D"/>
            </DockPanel>
        </Border>
    </Grid>
</Page>